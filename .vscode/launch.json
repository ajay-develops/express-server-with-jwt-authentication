{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express App",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server.js", // Replace with the entry file of your app
      "restart": true, // Optional: Enable auto-restart
      "runtimeExecutable": "nodemon", // Optional: Use nodemon for auto-restarts
      "console": "integratedTerminal", // Output in VSCode terminal
      "env": {
        // Optional: Environment variables
        "NODE_ENV": "development"
      },
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
